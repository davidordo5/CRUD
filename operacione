- empleados.css
/* home.component.css */
.form-container {
    background-color: #f8f9fa; /* Fondo gris claro */
    border: 2px solid #ccc; /* Bordes gris claro */
    border-radius: 10px; /* Bordes redondeados */
    padding: 20px; /* Espaciado interno */
    max-width: 600px; /* Ancho máximo del contenedor */
    margin: 20px auto; /* Centrado en la página */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra para dar profundidad */
  }
  
  .form-title {
    text-align: center; /* Centrar título */
    margin-bottom: 20px; /* Espacio debajo del título */
  }
  
  .form-group {
    margin-bottom: 15px; /* Espacio entre campos */
  }
  
  .form-control {
    width: 100%; /* Ancho completo */
    padding: 10px; /* Espaciado interno */
    border: 1px solid #ccc; /* Bordes gris */
    border-radius: 5px; /* Bordes redondeados */
  }
  
  .btn {
    width: 100%; /* Botón ancho completo */
  }
  /* home.component.css */
.form-buttons {
    display: flex; /* Usar flexbox para distribuir los botones */
    justify-content: space-between; /* Espacio entre los grupos de botones */
    margin-top: 20px; /* Espaciado superior para los botones */
}

.left-buttons,
.right-buttons {
    display: flex; /* Usar flexbox para alinear los botones dentro de cada grupo */
}

.btn {
    margin: 0 5px; /* Espaciado horizontal entre los botones */
    padding: 10px 20px; /* Espaciado interno de los botones */
}
