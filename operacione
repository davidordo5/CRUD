-Navbar.css 
/* navbar.component.css */
.navbar {
    background-color: #343a40; /* Color oscuro elegante para el navbar */
    padding: 1rem; /* Espaciado alrededor */
}

.navbar-brand {
    font-size: 2.5rem; /* Tamaño de fuente aumentado para el título */
    font-weight: bold; /* Texto en negrita */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7); /* Sombra de texto para dar efecto de profundidad */
}

.content-box {
    background-color: #474e55; /* Color de fondo del cuadro */
    border-radius: 10px; /* Bordes redondeados */
    padding: 15px; /* Espaciado interno */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Sombra para el cuadro */
    text-align: center; /* Centra el texto dentro del cuadro */
}

h1 {
    color: rgb(190, 72, 72); /* Color del texto del título */
    font-size: 3rem; /* Tamaño del texto del título */
    margin-bottom: 20px; /* Espaciado inferior */
}

.label {
    display: inline-block; /* Asegura que el label sea un bloque en línea */
    color: gray; /* Color del texto del label */
    font-size: 1.5rem; /* Tamaño del texto del label */
    padding: 10px 15px; /* Espaciado interno del label */
    border-radius: 5px; /* Bordes redondeados para el label */
    background-color: #575b5f; /* Color de fondo claro para el label */
    margin-top: 20px; /* Espacio superior */
}

